<div class="col-md-4 mb-2">
  <div class="card" style="width: 18rem;">
    <%= link_to post do %>
      <%= image_tag post.image_url || default_profile_image_url, class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post %></h5> posted by <%= link_to post.user.name, post.user %>
      <p class="card-text"><%= post.body.html_safe %></p>
      <p><small>Hashtags: <%= raw post.hashtags.map(&:title).map { |hashtag| link_to hashtag, posts_path(hashtag: hashtag) }.join(", ") %></small></p>
      <%- if post.user == current_user %>
        <%= link_to "Show", post %>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </div>
  </div>
</div>