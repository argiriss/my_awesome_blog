<div class="col-md-4">
  <%= link_to(user) do %>
    <div class="card" style="width: 18rem;">
      <%= image_tag user.image_url || "default_profile_image.jpeg", class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= user.name %></h5>
        <p class="card-text">Number of posts: <%= user.posts.size %></p>
      </div>
    </div>
  <% end %>
</div>